<div class="container">
  <div class="row">
    <ul class="col-sm-8 col-sm-offset-2 list-unstyled">
      <% @restaurants.each do |restaurant| %>
        <li>
          <h4><%= link_to restaurant.name, restaurant_path(restaurant), class:"text-decoration-none text-dark"%></h4>
          <p class="text-black-50"><%= restaurant.address %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
